<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/colorPrimaryDark"/>
            <stroke
                android:width="@dimen/button_default_stroke_width"
                android:color="@color/colorPrimary"/>
            <corners android:radius="@dimen/button_default_radius"/>
            <padding
                android:left="@dimen/button_default_padding"
                android:top="@dimen/button_default_padding"
                android:right="@dimen/button_default_padding"
                android:bottom="@dimen/button_default_padding"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorPrimaryDark"
                android:endColor="@color/colorPrimary"
                android:angle="270"/>
            <stroke
                android:width="@dimen/button_default_stroke_width"
                android:color="@color/colorPrimary"/>
            <corners android:radius="@dimen/button_default_radius"/>
            <padding
                android:left="@dimen/button_default_padding"
                android:top="@dimen/button_default_padding"
                android:right="@dimen/button_default_padding"
                android:bottom="@dimen/button_default_padding"/>
        </shape>
    </item>
</selector>